<Window x:Class="LogAnalizerWpfClient.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogAnalyzer - Initializing..."
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Width="500"
        Height="300"
        Topmost="True">
        

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.7" />
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     BeginTime="0:0:3"
                                     From="1" To="0" Duration="0:0:0.7"
                                     Completed="FadeOut_Completed" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="20"
            Background="#FF1E1E1E"
            Padding="20"
            BorderBrush="#FF3C3C3C"
            BorderThickness="2">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">
            <TextBlock Text="ðŸ” LogAnalyzer"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Loading, please wait..."
                       Foreground="LightGray"
                       FontSize="14"
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True"
                         Height="10"
                         Margin="0,20,0,0"/>
        </StackPanel>
    </Border>

</Window>